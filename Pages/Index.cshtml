@page
@model IndexModel
@inject FogelFormedlingenAB.Data.AccessControl accessControl
@{
	ViewData["Title"] = "Home page";
}
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
	<meta name="generator" content="Hugo 0.84.0">
	<title>Album example · Bootstrap v5.0</title>
	<!-- Bootstrap JavaScript (from CDN) - Required for collapsible components -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

	<link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/album/">


	<!-- Bootstrap core CSS -->
	<link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

	<style>
		.bd-placeholder-img {
			font-size: 1.125rem;
			text-anchor: middle;
			-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;
		}

		@@media (min-width: 768px) {
			.bd-placeholder-img-lg {
				font-size: 3.5rem;
			}
		}
	</style>


</head>
<body>


	<main>

		<div id="search-form">
			<form method="get" action="Index" class="search-form">
				<label for="searchString">Sök på annons:</label>
				<input type="text" id="searchString" name="searchString" placeholder="Ange annons" value="@Model.SearchString">

				<label for="category">Sök på kategori:</label>
				<select id="category" name="category">
					<option value="">Alla kategorier</option>
					@foreach (var category in Model.Categories)
					{
						<option value="@category">@category</option>
					}
				</select>
				<button type="submit">Sök</button>
			</form>
		</div>

		<div class="container">
			<div class="row justify-content-center">
				@foreach (var ad in Model.Ads)
				{
					<div class="col-md-4 mb-4">

						<div class="card shadow-sm h-100">

							<h3 style="text-align:center;">@ad.Title</h3>
							<div class="d-flex justify-content-center">

								<img class="product-img" src="~/images/@ad.PictureUrl" class="card-img-top img-fluid" alt="@ad.Title">
							</div>
							<div class="card-body d-flex flex-column">

								<p class="card-text">@ad.Price.ToString("C0")</p>
								<div class="mt-auto">

									<div class="btn-group">
										<a asp-page="/AdPage" class="btn btn-sm btn-outline-secondary">Visa Fågel</a>
									</div>
									<small class="text-muted">@ad.StartDate</small>
								</div>
							</div>
						</div>

					</div>
				}
			</div>

		
	</main>

	


	<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>