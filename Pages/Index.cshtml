	<main>

		<div id="search-form">
			<form method="get" action="Index" class="search-form">
				<label for="searchString">Sök på annons:</label>
				<input type="text" id="searchString" name="searchString" placeholder="Ange annons" value="@Model.SearchString">

				<label for="category">Sök på kategori:</label>
				<select id="category" name="category">
					<option value="">Alla kategorier</option>
					@foreach (var category in Model.Categories)
					{
						<option value="@category">@category</option>
					}
				</select>
				<button type="submit">Sök</button>
			</form>
		</div>

		<div class="container">
			<div class="row justify-content-center">
				@foreach (var ad in Model.Ads)
				{
					<div class="col-md-4 mb-4">

						<div class="card shadow-sm h-100">

							<h3 style="text-align:center;">@ad.Title</h3>
							<div class="d-flex justify-content-center">

								<img class="product-img" src="~/images/@ad.PictureUrl" class="card-img-top img-fluid" alt="@ad.Title">
							</div>
							<div class="card-body d-flex flex-column">

								<p class="card-text">@ad.Price.ToString("C0")</p>
								<div class="mt-auto">

									<div class="btn-group">
										<a asp-page="/AdPage" class="btn btn-sm btn-outline-secondary">Visa Fågel</a>
									</div>
									<small class="text-muted">@ad.StartDate</small>
								</div>
							</div>
						</div>

					</div>
				}
			</div>

		
	</main>

	<footer class="text-muted py-5">
		<div class="container">
			<p class="float-end mb-1">
				<a href="#">Back to top</a>
			</p>
		</div>
	</footer>


	<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>


</body>
